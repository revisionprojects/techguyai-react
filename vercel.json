{
    "version": 2,
    "buildCommand": "npm run build",
    "outputDirectory": "dist",
    "framework": "vite",
    "rewrites": [
      {
        "source": "/(.*)",
        "destination": "/index.html"
      },
      {
        "source": "/api/(.*)",
        "destination": "/api/$1"
      }
    ],
    "builds": [
      { "src": "package.json", "use": "@vercel/static-build" },
      { "src": "api/**/*.ts", "use": "@vercel/node" }
    ],
    "headers": [
      {
        "source": "/static/(.*)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      }
    ]
  }